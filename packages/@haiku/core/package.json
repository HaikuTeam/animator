{
  "name": "@haiku/core",
  "version": "3.3.4",
  "description": "Haiku Core is a JavaScript library for building user interfaces",
  "homepage": "https://haiku.ai",
  "directories": {
    "lib": "lib",
    "dom": "dom",
    "components": "components",
    "dist": "dist"
  },
  "keywords": [
    "animation",
    "motion",
    "component",
    "web",
    "browser",
    "svg",
    "rendering",
    "engine"
  ],
  "repository": "https://github.com/HaikuTeam/core",
  "main": "index.js",
  "scripts": {
    "bundle": "node ./scripts/bundle.js",
    "self-link": "yarn link && yarn link @haiku/core",
    "develop": "yarn self-link && node ./scripts/develop.js",
    "compile": "tsc",
    "watch": "tsc --watch",
    "coverage": "yarn compile && nyc yarn ts-node ./node_modules/.bin/tape 'test/**/*.test.ts' | tap-spec",
    "html-coverage": "yarn compile && nyc --reporter=html yarn ts-node ./node_modules/.bin/tape 'test/**/*.test.ts' | tap-spec",
    "lint": "yarn lint-src && yarn lint-test",
    "lint-src": "yarn tslint -p tsconfig.json -c tslint.json --exclude 'src/vendor/**' 'src/**/*.ts' -t stylish",
    "lint-test": "yarn tslint -p tsconfig.test.json -c tslint.json 'test/**/*.ts' -t stylish",
    "lint-report": "yarn lint-src -t checkstyle -o checkstyle-result.xml",
    "fix": "yarn lint-src --fix && yarn lint-test --fix",
    "test": "ts-node -P tsconfig.test.json ./node_modules/.bin/tape 'test/**/*.test.ts' | tap-spec",
    "test-report": "ts-node -P tsconfig.test.json ./node_modules/.bin/tape 'test/**/*.test.ts' > test-result.tap",
    "depcheck": "depcheck ."
  },
  "authors": [
    "Matthew Trost <matthew@haiku.ai>",
    "Zack Brown <zack@haiku.ai>",
    "Taylor Poe <taylor@haiku.ai>",
    "Sasha Joseph <sasha@haiku.ai>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@angular/core": "^6.0.0",
    "@types/node": "8.9.4",
    "@types/tape": "^4.2.30",
    "async": "^2.5.0",
    "chokidar": "^1.7.0",
    "depcheck": "^0.6.7",
    "express": "4.14.1",
    "filesize": "3.5.10",
    "fs-extra": "^4.0.2",
    "handlebars": "^4.0.8",
    "jsdom": "^11.1.0",
    "leaked-handles": "^5.2.0",
    "nodemon": "1.11.0",
    "nyc": "^11.8.0",
    "opn": "^5.1.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.1.1",
    "rollup": "^0.53.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify-es": "^0.0.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "ts-loader": "^3.1.1",
    "ts-node": "^6.0.3",
    "tslint": "^5.7.0",
    "tslint-config-haiku": "1.0.0",
    "typescript": "^2.5.2",
    "uglify-js": "^2.7.5",
    "webpack": "^3.8.1"
  },
  "peerDependencies": {
    "@angular/core": "^5.2.5",
    "react": "^16.0.0 || ^15.4.2",
    "react-dom": "^16.0.0 || ^15.4.2"
  }
}
